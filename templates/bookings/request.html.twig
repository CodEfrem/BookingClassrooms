<title>{% block title %}Pré-réservation{% endblock %}</title>

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('path/to/airbnb-style.css') }}">
    <style>
        
            form {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff; 
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            margin-bottom: 20px;
            font-size: 24px;
            color: #333333; 
            text-align: center;
        }

        form input[type="date"],
        form input[type="text"],
        form select,
        form button[type="submit"] {
            width: 100%;
            padding: 12px; 
            margin-bottom: 15px;
            border: 1px solid #d1d1d1;
            border-radius: 4px;
            box-sizing: border-box;
            font-size: 16px;
        }

        form select {
            appearance: none;
            background-color: #f5f5f5;
            background-image: url('data:image/svg+xml;utf8,<svg fill="%23333" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/></svg>'); /* Custom dropdown arrow */
            background-repeat: no-repeat;
            background-position: right 15px center;
            padding-right: 40px;
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
        }

        form button[type="submit"] {
            background-color: #4E4FFA; 
            color: #ffffff; 
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            text-transform: uppercase; 
        }

        form button[type="submit"]:hover {
            background-color: #0102fa; 
        }
    </style>

{% endblock %}

{% block body %}
    <h1 class="text-center">Effectuer une pré-réservation</h1>

    {{ form_start(form) }}
    {{ form_row(form.user) }}
    
    <div class="form-group">
        {{ form_row(form.start_date, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.end_date, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.number, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.amount, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.classroom, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.customers, {'attr': {'class': 'form-control'}}) }}
    </div>
    
    <button type="submit" class="btn btn-primary">Réserver</button>
    <a href="{{ path('classrooms') }}" class="btn">Retour au salles</a>
{% endblock %}
    {{ form_end(form) }}

     

