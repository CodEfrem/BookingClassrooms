{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}
    <div class="container py-5" id="c-account">

        <div id="Profile">
            <div class="col-lg-4 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="avatar avatar-xxl profile-n-3 mb-3">
                            <img class="avatar-img rounded-circle border border-white border-3" src="images/users/homme.png" width="150" alt="User Avatar">
                        </div>
                        <h2 class="h5 mb-2">{{ app.user.name }}</h2>
                        <p class="text-muted mb-4">{{ app.user.email }}</p>
                        <button class="btn btn-outline-danger">
                        <a href="{{ path('complete_profile') }}"</a>
                            <i class="bi bi-pencil-fill pe-1"></i>
                            Update Profile
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h2 class="h5 mb-4">Account Information</h2>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-3">
                                <i class="bi bi-briefcase me-1">siret : </i>
                                {{ app.user.siret }}
                            </li></br>
                            <li class="mb-3">
                                <i class="bi bi-geo-alt me-1">phone : </i>
                                {{ app.user.phone }}
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-geo-alt me-1">address : </i>
                                {{ app.user.address }}
                            </li></br>
                            <li class="mb-3">
                                <i class="bi bi-geo-alt me-1">city : </i>
                                {{ app.user.city }}
                            </li></br>
                            <li class="mb-3">
                                <i class="bi bi-geo-alt me-1">zip : </i>
                                {{ app.user.zip }}
                            </li></br>
                            <li class="mb-3">
                                <i class="bi bi-geo-alt me-1">country : </i>
                                {{ app.user.country }}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
            <div class="row">
					{# Booking #}
					<div class="mb-4">
						<div class="card">
							<div class="card-header d-sm-flex justify-content-between align-items-center border-0">
								<h5 class="card-title">
									Your bookings
									<span class="badge bg-danger bg-opacity-10 text-danger">
										{{ app.user.bookings|length }}
									</span>
								</h5>
								<a class="btn btn-primary-soft btn-sm" href={{ path('app_bookings') }}>
									See more
								</a>
							</div>
							<div class="card-body position-relative pt-3">
								<div class="row g-3">
                                
									{% for booking in app.user.bookings %}
                                    {% if booking.status is defined and booking.status %}
										<div class="col-md-4 col-sm-12">
											<div class="card shadow-none text-center h-100">
												<div class="card-body p-2 pb-0">
                                                    <div class="bg-success">
                                                        <p class="fw-bolder text-success">Your booking is validate !</p>
                                                    </div>
													<p class="card-title border fw-bold rounded-pill mb-1 mt-1">
														{{ booking.classroom|slice(0, 15) }}
													</p>
													<table class="table">
														<tbody>
															<tr>
																<th scope="row">Start at</th>
																<td>{{ booking.startDateString }}</td>
															</tr>
															<tr>
																<th scope="row">End at</th>
																<td>{{ booking.endDateString }}</td>
															</tr>
														</tbody>
													</table>
												</div>
											</div>
                                            {% else %}
                                            <div class="bg-danger">
                                            <p class="text-danger">Your booking is awaiting validation !</p>
                                            </div>
										</div>
                                        {% endif %}
                                        <div class="card-footer p-2 border-0">
													<a href={{ path('app_bookings', { booking: booking.id }) }} class="btn btn-sm btn-custom rounded-pill" data-bs-toggle="tooltip" data-bs-placement="top">
														<i class="bi bi-eye"></i>
														Check your booking
													</a>
												</div>
									{% endfor %}

								</div>
							</div>
							<!-- Card body END -->
						</div>
					</div>
                </div>

{% endblock %}
