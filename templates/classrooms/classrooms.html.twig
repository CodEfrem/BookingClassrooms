{% extends 'base.html.twig' %}

{% block title %}All Classrooms
{% endblock %}

{% block body %}
<main class="classrooms">
	<div class="container">
		<div class="row">
			{% for classroom in classrooms %}
				<div class="col-md-4 mb-4">
					<div class="card">
						{% if classroom.image %}
							<img src="images/salles.jpg" class="card-img-top" alt="{{ classroom.name }}">
						{% else %}
							<img src="images/salles.jpg" class="card-img-top" alt="Placeholder Image">
						{% endif %}
						<div class="card-body">
							<h5 class="card-title">{{ classroom.name }}</h5>
							<p class="card-text">{{ classroom.description }}</p>
							<a href="{{ path('classroom', { id: classroom.id }) }}" class="btn btn-primary">View Details</a>

						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
    </main>
{% endblock %}
